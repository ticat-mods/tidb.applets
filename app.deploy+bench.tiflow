[help/]
auto deploy, run benchmark then destroy cluster, usage:
[workload].conf : app.deploy+bench <hosts>'
[/help]

abbr = app.depl+ben
#args.auto = *

flow = break.after.gen-tiup-yaml : deploy.auto : tidb.rm+new : [[bench.workload]].load : [[bench.workload]].run : meta.db.up : bench.record : db.rm

[arg]
hosts|host|h = ''
workload|wl = tpcc

[arg2env]
deploy.hosts = hosts
bench.workload = workload

[env]
bench.workload = read
deploy.hosts = read
